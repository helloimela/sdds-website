{
  "templates": [
    {
      "id": "1",
      "title": "Article Text",
      "text": "<div> \n  <h1>{{item.content.title}}</h1>\n  <article>\n    <p [innerHTML]='item.content.text | markdown'></p>\n  </article>\n</div>"
    },
    {
      "id": "2",
      "title": "Code example",
      "text": "<section code-example [example]='item.content' toggleCode='true'></section>"
    },
    {
      "id": "3",
      "title": "Technical Documentation",
      "text": "<section class='container' *ngIf='item.content.info'><strong>Technical documentation</strong><table class='table'><thead><tr><th>Name</th><th>Description</th><th>Type</th><th>Value</th></tr></thead><tbody><tr *ngFor='let info of item.content.info; index as i'><td>{{info.name}}</td><td>{{info.docs}}</td><td>{{info.type}}</td><td>{{info.default}}</td></tr></tbody></table></section>"
    },
    {
      "id": "4",
      "title": "Preview thumbnail",
      "text": ""
    }
  ]
}